<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="ltr"
    android:padding="30dp"
    tools:layout_editor_absoluteX="2dp"
    android:background="@drawable/background"
    tools:layout_editor_absoluteY="-66dp">

  <TextView
      android:id="@+id/how_much_time"
      android:layout_width="147dp"
      android:layout_height="30dp"
      android:layout_marginStart="28dp"
      android:layout_marginTop="20dp"
      android:text="how_much_time"
      android:textAlignment="center"
      android:textSize="20sp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/FoS" />

  <TextView
      android:id="@+id/name1"
      android:layout_width="72dp"
      android:layout_height="30dp"
      android:layout_marginTop="40dp"
      android:layout_marginEnd="16dp"
      android:text="name"
      android:textAlignment="center"
      android:textSize="20sp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/date" />

  <TextView
      android:id="@+id/age"
      android:layout_width="76dp"
      android:layout_height="42dp"
      android:text="age"
      android:textSize="16sp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="@+id/name1" />

  <TextView
      android:id="@+id/address2"
      android:layout_width="226dp"
      android:layout_height="31dp"
      android:layout_marginTop="12dp"
      android:text="Address2"
      android:textAlignment="center"
      android:textSize="20sp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.502"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/Address1" />

  <Button
      android:id="@+id/yes"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"

      android:layout_marginTop="20dp"
      android:layout_marginEnd="36dp"
      android:text="yes"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toStartOf="@+id/no"
      app:layout_constraintHorizontal_bias="1.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/how_much_time"
      app:layout_constraintVertical_bias="0.0" />

  <TextView
      android:id="@+id/ToL"
      android:layout_width="147dp"
      android:layout_height="30dp"
      android:layout_marginTop="20dp"
      android:text="ToL"
      android:textAlignment="center"
      android:textSize="20sp"
      app:layout_constraintBottom_toBottomOf="@+id/how_much_time"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/FoS" />

  <TextView
      android:id="@+id/OoT"
      android:layout_width="141dp"
      android:layout_height="30dp"
      android:layout_marginStart="36dp"
      android:layout_marginTop="16dp"
      android:text="OoT"
      android:textAlignment="center"
      android:textSize="20sp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/address2" />

  <TextView
      android:id="@+id/FoS"
      android:layout_width="149dp"
      android:layout_height="30dp"
      android:layout_marginTop="16dp"
      android:layout_marginEnd="4dp"
      android:text="FoS"
      android:textAlignment="center"
      android:textSize="20sp"
      app:layout_constraintBottom_toBottomOf="@+id/OoT"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/address2"
      app:layout_constraintVertical_bias="0.0" />

  <TextView
      android:id="@+id/time"
      android:layout_width="101dp"
      android:layout_height="29dp"
      android:text="time"
      android:textAlignment="center"
      android:textSize="20sp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.5"
      app:layout_constraintStart_toEndOf="@+id/date"
      app:layout_constraintTop_toTopOf="@+id/date" />

  <TextView
      android:id="@+id/thereason"
      android:layout_width="226dp"
      android:layout_height="31dp"
      android:layout_marginTop="12dp"
      android:text="THE Reason"
      android:textAlignment="center"
      android:textSize="20sp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.497"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/phone" />

  <TextView
      android:id="@+id/date"
      android:layout_width="126dp"
      android:layout_height="32dp"
      android:layout_marginTop="4dp"
      android:layoutDirection="ltr"
      android:text="date"
      android:textAlignment="center"
      android:textSize="20sp"
      app:layout_constraintEnd_toStartOf="@+id/time"
      app:layout_constraintHorizontal_bias="0.5"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <TextView
      android:id="@+id/Address1"
      android:layout_width="226dp"
      android:layout_height="31dp"
      android:layout_marginTop="12dp"
      android:text="Address"
      android:textAlignment="center"
      android:textSize="20sp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.502"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/thereason" />

  <Button
      android:id="@+id/no"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginEnd="56dp"
      android:text="No"
      app:layout_constraintBottom_toBottomOf="@+id/yes"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toTopOf="@+id/yes"
      app:layout_constraintVertical_bias="0.0" />

  <TextView
      android:id="@+id/phone"
      android:layout_width="216dp"
      android:layout_height="29dp"
      android:layout_marginTop="12dp"
      android:text="phone"
      android:textAlignment="center"
      android:textSize="20sp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.497"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/imageView2" />

  <TextView
      android:id="@+id/money"
      android:layout_width="73dp"
      android:layout_height="31dp"
      android:text="money"
      android:textAlignment="center"
      android:textSize="20sp"
      app:layout_constraintStart_toStartOf="@+id/name1"
      app:layout_constraintTop_toTopOf="@+id/gender12" />

  <ImageView
      android:id="@+id/imageView2"
      android:layout_width="152dp"
      android:layout_height="142dp"
      android:layout_marginTop="12dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.494"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/date"
      tools:srcCompat="@tools:sample/avatars" />

  <TextView
      android:id="@+id/gender12"
      android:layout_width="74dp"
      android:layout_height="35dp"
      android:layout_marginTop="16dp"
      android:text="gender"
      android:textSize="20sp"
      app:layout_constraintStart_toStartOf="@+id/age"
      app:layout_constraintTop_toBottomOf="@+id/age" />

</androidx.constraintlayout.widget.ConstraintLayout>