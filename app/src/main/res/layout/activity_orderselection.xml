<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:layoutDirection="ltr"
    tools:context=".Orderselection">

    <RelativeLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/loc"
            android:layout_width="409dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/rgBtnGroupPlace"
            android:layout_alignParentStart="true"
            android:layout_marginStart="2dp"
            android:layout_marginTop="30dp"
            android:hint="City, Street, Number (write in this order)"
            android:textSize="20dp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="217dp"
            android:layout_height="35dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="96dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="98dp"
            android:text="TextView"
            android:textAlignment="center"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <RadioGroup
            android:id="@+id/rgBtnGroupDescribe1"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_below="@id/textView"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="50dp"
            android:layout_marginTop="-500dp"
            android:layout_marginEnd="50dp"
            android:background="@drawable/radio_group_background"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rbTalker"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/radio_button_bg"
                android:button="@null"
                android:checked="false"
                android:gravity="center"
                android:text="Talker"
                android:textColor="@drawable/button_text_checked_color"
                android:textSize="22sp"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/rbListener"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/radio_button_bg"
                android:button="@null"
                android:checked="false"
                android:gravity="center"
                android:text="Listener"
                android:textColor="@drawable/button_text_checked_color"
                android:textSize="22sp"
                android:textStyle="bold" />
        </RadioGroup>


        <RadioGroup
            android:id="@+id/rgBtnGroupDescribe2"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_below="@id/rgBtnGroupDescribe1"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="50dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="50dp"
            android:background="@drawable/radio_group_background"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rbFunny"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/radio_button_bg"
                android:button="@null"
                android:checked="false"
                android:gravity="center"
                android:text="Funny"
                android:textColor="@drawable/button_text_checked_color"
                android:textSize="22sp"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/rbSerious"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/radio_button_bg"
                android:button="@null"
                android:checked="false"
                android:gravity="center"
                android:text="Serious"
                android:textColor="@drawable/button_text_checked_color"
                android:textSize="22sp"
                android:textStyle="bold" />
        </RadioGroup>


        <RadioGroup
            android:id="@+id/rgBtnGroupDescribe3"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_below="@id/rgBtnGroupDescribe2"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="50dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="50dp"
            android:background="@drawable/radio_group_background"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rbOutgoing"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/radio_button_bg"
                android:button="@null"
                android:checked="false"
                android:gravity="center"
                android:text="Outgoing"
                android:textColor="@drawable/button_text_checked_color"
                android:textSize="22sp"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/rbTimid"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/radio_button_bg"
                android:button="@null"
                android:checked="false"
                android:gravity="center"

                android:text="Timid"
                android:textColor="@drawable/button_text_checked_color"
                android:textSize="22sp"
                android:textStyle="bold" />
        </RadioGroup>


        <RadioGroup
            android:id="@+id/rgBtnGroupPlace"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_below="@id/textPlace"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="50dp"
            android:layout_marginTop="-40dp"
            android:layout_marginEnd="50dp"
            android:background="@drawable/radio_group_background"
            android:orientation="horizontal"
            android:visibility="invisible">

            <RadioButton
                android:id="@+id/rbAnother"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/radio_button_bg"
                android:button="@null"
                android:checked="false"
                android:gravity="center"
                android:text="Another"
                android:textColor="@drawable/button_text_checked_color"
                android:textSize="22sp"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/rbYour"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/radio_button_bg"
                android:button="@null"
                android:checked="false"
                android:gravity="center"
                android:text="Your"
                android:textColor="@drawable/button_text_checked_color"
                android:textSize="22sp"
                android:textStyle="bold" />
        </RadioGroup>


        <RadioGroup
            android:id="@+id/rgBtnGroupcheck"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_below="@id/textcheck"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="50dp"
            android:layout_marginTop="-60dp"
            android:layout_marginEnd="50dp"
            android:background="@drawable/radio_group_background"
            android:orientation="horizontal">


            <RadioButton
                android:id="@+id/rbNo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/radio_button_bg"
                android:button="@null"
                android:checked="false"
                android:gravity="center"
                android:text="No"
                android:textColor="@drawable/button_text_checked_color"
                android:textSize="22sp"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/rbYes"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/radio_button_bg"
                android:button="@null"
                android:checked="false"
                android:gravity="center"
                android:text="Yes"
                android:textColor="@drawable/button_text_checked_color"
                android:textSize="22sp"
                android:textStyle="bold" />
        </RadioGroup>

        <TextView
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:layout_below="@id/rgBtnGroupPlace"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="0dp"
            android:text="address:"
            android:textSize="20dp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="398dp"
            android:layout_height="26dp"
            android:layout_below="@id/menu_drop"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="532dp"
            android:text="Describe how you want the stand in to be:"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textofhowmuchtime"
            android:layout_width="384dp"
            android:layout_height="40dp"
            android:layout_below="@id/tv_timer1"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="9dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="532dp"
            android:text="how much time is the meeting:"
            android:textSize="20dp" />

        <Spinner
            android:id="@+id/spinner1"
            android:layout_width="197dp"
            android:layout_height="50dp"
            android:layout_below="@id/tv_timer1"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="61dp"
            android:layout_marginEnd="179dp" />

        <TextView
            android:id="@+id/textPlace"
            android:layout_width="wrap_content"
            android:layout_height="26dp"
            android:layout_below="@id/rgBtnGroupcheck"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="35dp"
            android:layout_marginEnd="11dp"
            android:layout_marginBottom="69dp"
            android:text="Where do you want the STAND IN to pick you up?"
            android:textSize="20dp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/textcheck"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@id/loc1"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="69dp"
            android:text=" do you want the STAND IN will pick you up?"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textwhere"
            android:layout_width="wrap_content"
            android:layout_height="26dp"
            android:layout_below="@id/rgBtnGroupDescribe3"
            android:layout_alignParentStart="true"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="69dp"
            android:text="Adress of the place?"
            android:textSize="20dp" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/menu_drop"
            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_timer1"
            android:layout_marginStart="10dp"
            android:layout_marginTop="119dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:hint="what do you want from The STAND IN"
            android:padding="20dp">

            <AutoCompleteTextView
                android:id="@+id/drop_items"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:inputType="none" />

        </com.google.android.material.textfield.TextInputLayout>

        <EditText
            android:id="@+id/loc1"
            android:layout_width="409dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/textwhere"
            android:layout_alignParentStart="true"
            android:layout_marginStart="2dp"
            android:layout_marginTop="-60dp"
            android:hint="City, Street, Number (write in this order)"
            android:textSize="20dp" />


        <TextView
            android:id="@+id/tv_timer1"
            android:layout_width="378dp"
            android:layout_height="59dp"
            android:layout_below="@id/textView1"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="14dp"
            android:layout_marginTop="43dp"
            android:layout_marginEnd="19dp"
            android:gravity="center"
            android:text="select time of meeting"
            android:textSize="25sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button2"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/address"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="150dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="150dp"
            android:layout_marginBottom="5dp"
            android:onClick="gopay"
            android:text="order"
            android:textSize="12dp" />

    </RelativeLayout>
</ScrollView>